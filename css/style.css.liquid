#interests {
	list-style: none;
	display: table-cell;
	padding: 0;
	margin: 0;
}

#interests li {
	padding-left: 1em;
	text-indent: -1em;
	vertical-align: text-bottom;
	/*vertical-align: middle;*/
}

#interests li:before {
	content: "+";
	padding-right: 5px;
	vertical-align: baseline;
	display: inline;
	padding-top: 0;
	margin-bottom: .5em;

}


.presentation:before  {
	content: "+";
}

