	padding-bottom: 10px;
	display: block;
}

.person {
	float: right;
}

.bio {
	float: left;
}

.presentation .post {

}

.box {
	background-color: red;
	color: white;
	padding: 5px;

}

div.left {
	float: left; 
	clear: both;
}

div.right {
	float: left;
}

.field:after {
	content: ":";
}

.profile-pic {
	background-image: url('{{ page.first_name }}{{ page.last_name }}.jpg');
	float: right;
	max-width: 206px;
	max-height: 177px;
